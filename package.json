{
  "name": "playwright",
  "displayName": "Playwright Test for VSCode",
  "description": "%description%",
  "icon": "images/playwright-logo.png",
  "version": "1.1.17",
  "publisher": "ms-playwright",
  "repository": "https://github.com/microsoft/playwright-vscode",
  "bugs": {
    "url": "https://github.com/microsoft/playwright/issues"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:**/*playwright*.config.{ts,js,mjs}"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "category": "Test",
        "command": "pw.extension.install",
        "title": "%contributes.command.pw.extension.install%"
      },
      {
        "category": "Test",
        "command": "pw.extension.installBrowsers",
        "title": "%contributes.command.pw.extension.installBrowsers%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.inspect",
        "title": "%contributes.command.pw.extension.command.inspect%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.closeBrowsers",
        "title": "%contributes.command.pw.extension.command.closeBrowsers%"
      },
      {
        "category": "Test",
        "icon": "$(record)",
        "command": "pw.extension.command.recordNew",
        "title": "%contributes.command.pw.extension.command.recordNew%"
      },
      {
        "category": "Test",
        "icon": "$(record)",
        "command": "pw.extension.command.recordAtCursor",
        "title": "%contributes.command.pw.extension.command.recordAtCursor%"
      },
      {
        "category": "Test",
        "icon": "$(debug-alt)",
        "command": "pw.extension.command.recordFromExistingTest",
        "title": "Record from Existing Test"
      },
      {
        "category": "Test",
        "icon": "$(gear)",
        "command": "pw.extension.command.toggleModels",
        "title": "%contributes.command.pw.extension.command.toggleModels%"
      },
      {
        "category": "Test",
        "command": "pw.extension.toggle.reuseBrowser",
        "title": "%contributes.command.pw.extension.toggle.reuseBrowser%"
      },
      {
        "category": "Test",
        "command": "pw.extension.toggle.showTrace",
        "title": "%contributes.command.pw.extension.toggle.showTrace%"
      },
      {
        "category": "Test",
        "command": "pw.extension.toggle.runGlobalSetupOnEachRun",
        "title": "%contributes.command.pw.extension.toggle.runGlobalSetupOnEachRun%"
      },
      {
        "category": "Test",
        "command": "pw.extension.toggle.pickLocatorCopyToClipboard",
        "title": "%contributes.command.pw.extension.toggle.pickLocatorCopyToClipboard%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.runGlobalSetup",
        "title": "%contributes.command.pw.extension.command.runGlobalSetup%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.runGlobalTeardown",
        "title": "%contributes.command.pw.extension.command.runGlobalTeardown%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.startDevServer",
        "title": "%contributes.command.pw.extension.command.startDevServer%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.stopDevServer",
        "title": "%contributes.command.pw.extension.command.stopDevServer%"
      },
      {
        "category": "Test",
        "command": "pw.extension.command.clearCache",
        "title": "%contributes.command.pw.extension.command.clearCache%"
      }
    ],
    "configuration": {
      "title": "Playwright",
      "properties": {
        "playwright.env": {
          "type": "object",
          "default": {},
          "description": "%configuration.playwright.env%"
        },
        "playwright.reuseBrowser": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.playwright.reuseBrowser%"
        },
        "playwright.showTrace": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.playwright.showTrace%"
        },
        "playwright.runGlobalSetupOnEachRun": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.playwright.runGlobalSetupOnEachRun%"
        },
        "playwright.pickLocatorCopyToClipboard": {
          "type": "boolean",
          "default": false,
          "description": "%configuration.playwright.pickLocatorCopyToClipboard%"
        },
        "playwright.updateSnapshots": {
          "type": "string",
          "enum": [
            "all",
            "changed",
            "missing",
            "none"
          ],
          "default": "missing",
          "description": "%configuration.playwright.updateSnapshots%"
        },
        "playwright.updateSourceMethod": {
          "type": "string",
          "enum": [
            "overwrite",
            "patch",
            "3way"
          ],
          "default": "3way",
          "description": "%configuration.playwright.updateSourceMethod%"
        }
      }
    },
    "languageModelTools": [
      {
        "name": "playwright_runTests",
        "displayName": "Run Playwright Tests",
        "toolReferenceName": "playwrightRunTests",
        "canBeReferencedInPrompt": true,
        "icon": "$(play)",
        "userDescription": "Run Playwright tests by file path, test name, or project",
        "modelDescription": "Runs Playwright tests in the workspace. Can run all tests, tests in a specific file, a specific test by name, or tests for a specific project. Returns test results including pass/fail status and error messages.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Optional: The relative path to the test file to run. If not provided, runs all tests."
            },
            "testName": {
              "type": "string",
              "description": "Optional: The name of a specific test to run. If provided with filePath, runs only that test."
            },
            "projectName": {
              "type": "string",
              "description": "Optional: The name of the Playwright project to run tests for (e.g., 'chromium', 'firefox', 'webkit')."
            }
          }
        }
      },
      {
        "name": "playwright_listTests",
        "displayName": "List Playwright Tests",
        "toolReferenceName": "playwrightListTests",
        "canBeReferencedInPrompt": true,
        "icon": "$(list-tree)",
        "userDescription": "List all Playwright tests in the workspace",
        "modelDescription": "Lists all Playwright tests discovered in the workspace including file paths, test names, line numbers, and available projects. Useful for understanding the test structure before running specific tests.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Optional: Filter tests to a specific file path."
            }
          }
        }
      },
      {
        "name": "playwright_generateLocator",
        "displayName": "Generate Playwright Locator",
        "toolReferenceName": "playwrightGenerateLocator",
        "canBeReferencedInPrompt": true,
        "icon": "$(symbol-method)",
        "userDescription": "Generate a Playwright locator for a UI element",
        "modelDescription": "Opens the Playwright inspector to generate a locator for a specific UI element. This tool helps create reliable test selectors by inspecting the application UI. Returns the generated locator string.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "Description of the UI element to locate (e.g., 'login button', 'email input field')."
            }
          }
        }
      },
      {
        "name": "playwright_getTestResults",
        "displayName": "Get Playwright Test Results",
        "toolReferenceName": "playwrightGetTestResults",
        "canBeReferencedInPrompt": true,
        "icon": "$(checklist)",
        "userDescription": "Get the results of the last Playwright test run",
        "modelDescription": "Retrieves the results from the most recent Playwright test run including passed tests, failed tests, error messages, and execution time. Useful for analyzing test failures and debugging.",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "playwright_getConfig",
        "displayName": "Get Playwright Configuration",
        "toolReferenceName": "playwrightGetConfig",
        "canBeReferencedInPrompt": true,
        "icon": "$(gear)",
        "userDescription": "Get Playwright configuration information",
        "modelDescription": "Retrieves the Playwright configuration including available projects, test directories, browser settings, and other configuration options. Useful for understanding the test setup.",
        "inputSchema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "playwright_recordFromExistingTest",
        "displayName": "Record from Existing Test",
        "toolReferenceName": "playwrightRecordFromExistingTest",
        "canBeReferencedInPrompt": true,
        "icon": "$(debug-alt)",
        "userDescription": "Record Playwright test from existing test execution",
        "modelDescription": "Starts a Playwright recording session and runs an existing test in the same browser. The existing test actions are recorded and converted into a new Playwright test file. Requires the test path relative to the existing test cases directory and a properly configured environment.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "testPath": {
              "type": "string",
              "description": "The path to the test file relative to the existing test cases directory."
            }
          },
          "required": [
            "testPath"
          ]
        }
      },
      {
        "name": "playwright_debugTests",
        "displayName": "Debug Playwright Tests",
        "toolReferenceName": "playwrightDebugTests",
        "canBeReferencedInPrompt": true,
        "icon": "$(debug)",
        "userDescription": "Debug Playwright tests with breakpoints and step-through debugging",
        "modelDescription": "Starts Playwright tests in debug mode, allowing step-through debugging with breakpoints. Can debug all tests, tests in a specific file, a specific test by name, or tests for a specific project. Useful for troubleshooting test failures.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "filePath": {
              "type": "string",
              "description": "Optional: The relative path to the test file to debug. If not provided, debugs all tests."
            },
            "testName": {
              "type": "string",
              "description": "Optional: The name of a specific test to debug. If provided with filePath, debugs only that test."
            },
            "projectName": {
              "type": "string",
              "description": "Optional: The name of the Playwright project to debug tests for (e.g., 'chromium', 'firefox', 'webkit')."
            }
          }
        }
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "playwrightContainer",
          "title": "Playwright",
          "icon": "images/playwright-logo.png"
        }
      ]
    },
    "views": {
      "test": [
        {
          "type": "webview",
          "id": "pw.extension.settingsView",
          "name": "%views.test.pw.extension.settingsView%"
        }
      ],
      "playwrightContainer": [
        {
          "type": "webview",
          "id": "pw.extension.locatorsView",
          "name": "%views.test.pw.extension.locatorsView%"
        }
      ]
    }
  },
  "scripts": {
    "esbuild": "esbuild ./src/babelBundle.ts ./src/extension.ts ./src/oopReporter.ts ./src/debugTransform.ts ./src/playwrightFinder.ts ./src/*.script.ts --bundle --outdir=out --external:vscode --external:./babelBundle --external:./debugTransform --external:./oopReporter --external:./playwrightFinder --external:./*.script.ts --format=cjs --platform=node --target=ES2019",
    "build": "npm run esbuild -- --minify",
    "watch": "npm run esbuild -- --sourcemap --watch",
    "l10n": "npx @vscode/l10n-dev export -o ./l10n ./src",
    "lint": "tsc && eslint . --ext .ts,.tsx,.js",
    "test": "playwright test",
    "package": "npm run build && vsce package",
    "code": "code --uninstall-extension ms-playwright.playwright && code --install-extension playwright-0.2.11.vsix",
    "uncode": "code --uninstall-extension ms-playwright.playwright",
    "code-insiders": "code-insiders --uninstall-extension ms-playwright.playwright && code-insiders --install-extension playwright-0.2.11.vsix",
    "uncode-insiders": "code-insiders --uninstall-extension ms-playwright.playwright"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.2",
    "@playwright/test": "1.58.0-alpha-1764325208000",
    "@types/babel__core": "^7.20.3",
    "@types/babel__helper-plugin-utils": "^7.10.2",
    "@types/babel__traverse": "^7.20.3",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/stack-utils": "^2.0.1",
    "@types/vscode": "1.93.0",
    "@types/which": "^3.0.3",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vscode/l10n-dev": "^0.0.24",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.0.3",
    "minimatch": "^10.0.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/helper-plugin-utils": "^7.22.5",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/traverse": "^7.23.2",
    "stack-utils": "^2.0.6",
    "which": "^4.0.0",
    "ws": "^8.17.1"
  }
}
